<div class="container">
    <h1>New Project</h1>
    <div class="row">
        <div class="col-md-3">
            <!-- Optional content can go here -->
        </div>

        <div class="col-md-6">
        <h1><%= @project.new_record? ? "New Project" : "Edit Project" %></h1>
        <%= form_with model: @project, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :name, class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="mb-3">
            <%= f.label :description, class: 'form-label' %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          <div class="mb-3">
            <%= f.label "Assign Users", class: 'form-label' %><br>
            <%= collection_check_boxes(:project, :user_ids, User.all, :id, :name) do |cb| %>
              <div class="form-check">
                <%= cb.check_box(class: "form-check-input") %>
                <%= cb.label(class: "form-check-label") %>
              </div>
            <% end %>
          </div>
          <%= f.submit @project.new_record? ? "Create Project" : "Update Project", class: 'btn btn-success' %>
        <% end %>
        
        </div>

        <div class="col-md-3">
            <!-- Optional content can go here -->
        </div>
    </div>
</div>