<div class="container mt-4">
  <h1>Notifications</h1>
  <% if current_user.admin? %>
    <%= link_to 'Create Notification', new_notification_path, class: 'btn btn-primary mb-3' %>
  <% end %>
  <ul class="list-group">
    <% @notifications.each do |notification| %>
      <li class="list-group-item">
        <strong><%= notification.title %></strong>
        <p><%= notification.message %></p>
        <small>Created at: <%= notification.created_at.strftime('%Y-%m-%d %H:%M') %></small>
        <% if current_user.admin? %>
          <div class="mt-2 d-flex">
            <%= link_to 'Show', notification_path(notification), class: 'btn btn-warning btn-sm me-2' %>
            <%= link_to 'Edit', edit_notification_path(notification), class: 'btn btn-secondary btn-sm me-2' %>
            <%= button_to 'Delete', notification_path(notification), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </div>

        <% end %>
      </li>
    <% end %>
  </ul>
</div>
