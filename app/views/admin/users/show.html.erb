<h1>User Details</h1>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Role:</strong>
  <%= @user.admin? ? 'Admin' : 'User' %>
</p>

<%= link_to 'Edit', edit_admin_user_path(@user), class: 'btn btn-warning' %> |
<%= link_to 'Back to Users', admin_users_path, class: 'btn btn-secondary' %>
